<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phone"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/top_intel_logo"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:background="@drawable/intel_24"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true">
        </ImageView>

        <Button
            android:id="@+id/btn_top_home"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/top_intel_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="Home"
            android:textSize="10pt">
        </Button>

        <Button
            android:id="@+id/btn_top_music"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/btn_top_home"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Music"
            android:textSize="10pt">
        </Button>

        <Button
            android:id="@+id/btn_top_HVAC"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/btn_top_music"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="HVAC"
            android:textSize="10pt">
        </Button>

        <Button
            android:id="@+id/btn_top_NAVI"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/btn_top_HVAC"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="NAVI"
            android:textSize="10pt">
        </Button>

        <!-- Clock -->
        <android.widget.TextClock
            android:id="@+id/top_clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_top_NAVI"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:format24Hour="HH:mm"
            android:format12Hour="HH:mm"
            android:textStyle="bold"
            android:textSize="58dp" />
        <android.widget.TextClock
            android:id="@+id/top_clock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/top_clock_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:format24Hour="yyyy.MM.dd\nEE      a"
            android:format12Hour="yyyy.MM.dd\nEE      a"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- Phone num show -->
    <GridLayout
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3">

        <Button
            android:id="@+id/phone_num_input_1"
            android:layout_height="130dp"
            android:width="150dp"
            android:background="#ffffff"
            android:text="1"
            android:textColor="#006Da8"
            android:textSize="50dp"></Button>
        <Button
            android:id="@+id/phone_num_input_2"
            android:text="2"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_3"
            android:text="3"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_4"
            android:text="4"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_5"
            android:text="5"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_6"
            android:text="6"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_7"
            android:text="7"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_8"
            android:text="8"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_9"
            android:text="9"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_10"
            android:text="*"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_11"
            android:text="0"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>
        <Button
            android:id="@+id/phone_num_input_12"
            android:text="#"
            android:textSize="50dp"
            android:textColor="#006Da8"
            android:width="150dp"
            android:layout_height="130dp"
            android:background="#ffffff">
        </Button>

    </GridLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:background="@drawable/phone_center_line">
        </ImageView>

        <!-- Inputted phone number -->
        <TextView
            android:id="@+id/text_phone_number_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dial a Number"
            android:textSize="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="150dp">
        </TextView>

        <!-- Phone Input -->
        <Button
            android:id="@+id/btn_phone_call"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="520dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/phone_call">
        </Button>

        <!-- Phone delete -->
        <Button
            android:id="@+id/btn_phone_delete"
            android:layout_marginLeft="460dp"
            android:layout_marginTop="540dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/delete_100px">
        </Button>
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>